{
  "name": "dapp-template",
  "version": "0.0.1",
  "description": "Template for Hardhat / NextJS Development",
  "author": "Tobias Binnewies",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "ws:hh": "yarn workspace @dapp-template/hardhat",
    "ws:debug": "yarn workspace @dapp-template/hardhat-debug",
    "ws:nextjs": "yarn workspace @dapp-template/nextjs",

    "hh": "yarn workspace @dapp-template/hardhat hardhat",
    "hh:lint": "yarn workspace @dapp-template/hardhat lint",
    "hh:lint-staged": "yarn workspace @dapp-template/hardhat lint-staged",
    "hh:test": "yarn workspace @dapp-template/hardhat test",
    "hh:coverage": "yarn workspace @dapp-template/hardhat coverage",
    "hh:compare-gas": "yarn workspace @dapp-template/hardhat hardhat compare-gas",
    "hh:account": "yarn workspace @dapp-template/hardhat account",
    "hh:chain": "yarn workspace @dapp-template/hardhat chain",
    "hh:fork": "yarn workspace @dapp-template/hardhat fork",
    "hh:deploy": "yarn workspace @dapp-template/hardhat deploy",
    "hh:verify": "yarn workspace @dapp-template/hardhat verify",
    "hh:compile": "yarn workspace @dapp-template/hardhat compile",
    "hh:generate": "yarn workspace @dapp-template/hardhat generate",
    "account": "yarn run hh:account",
    "chain": "yarn run hh:chain",
    "fork": "yarn run hh:fork",
    "deploy": "yarn run hh:deploy",
    "verify": "yarn run hh:verify",
    "compile": "yarn run hh:compile",
    "generate": "yarn run hh:generate",

    "debug:start": "yarn workspace @dapp-template/hardhat-debug dev",
    
    "nextjs:start": "yarn workspace @dapp-template/nextjs dev",
    "next:lint": "yarn workspace @dapp-template/nextjs lint",
    "next:format": "yarn workspace @dapp-template/nextjs format",
    "next:check-types": "yarn workspace @dapp-template/nextjs check-types",
    "next:export": "yarn workspace @dapp-template/nextjs export",
    "start": "yarn run nextjs:start",
    "export": "yarn run nextjs:export"
  }
}
